@page "/"
@inherits IndexBase

<PageTitle>Weather Forecast</PageTitle>


@if (!WeatherForecasts.Any() && SelectedWeatherForecast == null)
{
    <span>Loading...</span>
}
else
{
    <div class="m-3">
        <h2>@SelectedWeatherForecast!.Date.ToString("D")</h2>

        <div class="row">
            <div class="col-md-3 col-sm-4 col-xs-12">
                <WeatherTypeImage WeatherType="@SelectedWeatherForecast!.WeatherType" Size="150" />
            </div>
            
            <div class="col-md-9 col-sm-8 col-xs-12">
                Minimum Temperature: @SelectedWeatherForecast.MinimumTemperature °C<br />
                Maximum Temperature: @SelectedWeatherForecast.MaximumTemperature °C
            </div>
        </div>
    </div>

    <div class="row">
        <ul class="list-group list-group-horizontal">
            @foreach (var weatherForecast in WeatherForecasts)
            {
                <li class="list-group-item list-group-item-action flex-column align-items-center text-center active">
                    <h5 class="text-light fw-bold">@weatherForecast.Date.ToString("ddd")</h5>
                    <p>@weatherForecast.Date.ToString("d MMM")</p>

                    <WeatherTypeImage WeatherType="@weatherForecast.WeatherType" Size="50" />

                    <p class="mt-3">
                        <span class="d-block d-lg-inline-block">@weatherForecast.MinimumTemperature °C</span>
                        <span class="d-none d-lg-inline-block"> / </span>
                        <span class="d-block d-lg-inline-block">@weatherForecast.MaximumTemperature °C</span>
                    </p>
                </li>
            }
        </ul>
    </div>
}
