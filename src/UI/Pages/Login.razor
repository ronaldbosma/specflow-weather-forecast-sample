@page "/login"
@inherits LoginBase

<h3 id="page-title">Login</h3>

@if (ShowAuthError)
{
    <div class="alert alert-danger" role="alert">
        <p>@Error</p>
    </div>
}
    
<p>You can login with username <em>John</em> and password <em>P@ssw0rd</em> or with username <em>Jane</em> and password <em>P@ssw0rd</em>.</p>

<EditForm Model="LoginRequest" OnValidSubmit="ExecuteLoginAsync" class="card card-body bg-light mt-5" style="max-width:500px;">
    <DataAnnotationsValidator />

    <div class="form-group row">
        <label for="username" class="col-form-label">Username:</label>
        <div>
            <InputText id="username" class="form-control" @bind-Value="LoginRequest.Username" />
            <ValidationMessage For="@(() => LoginRequest.Username)" />
        </div>
    </div>
    <div class="form-group row">
        <label for="password" class="col-form-label">Password:</label>
        <div>
            <InputText type="password" id="password" class="form-control" @bind-Value="LoginRequest.Password" />
            <ValidationMessage For="@(() => LoginRequest.Password)" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 text-right mt-3">
            <button id="submit-login" type="submit" class="btn btn-success">Login</button>
        </div>
    </div>
</EditForm>
